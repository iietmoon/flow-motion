function logError(t,e){console.error("An error occurred:",e)}function createErrorResponse(t,e){return{message:t,error:e}}function applyCSSAnimation(t,e,n,o,r,i){t.style[e]=n,t.style.transition="".concat(r,"ms ").concat(i," ").concat(e),setTimeout(function(){t.style[e]=o},r)}function revertCSSAnimation(t,e,n,o,r,i){t.style[e]=o,t.style.transition="".concat(r,"ms ").concat(i," ").concat(e),setTimeout(function(){t.style[e]=n},r)}function attachHoverListeners(t,e,i,c){t.forEach(function(r){e.forEach(function(t){var e=t.property,n=t.from,o=t.to,t=t.delay;setTimeout(function(){r.addEventListener("mouseover",function(){applyCSSAnimation(r,e,n,o,i,c)}),r.addEventListener("mouseleave",function(){revertCSSAnimation(r,e,n,o,i,c)})},void 0===t?0:t)})})}function attachScrollListeners(t,e,i,c){t.forEach(function(r){window.addEventListener("scroll",function(){var t=r.getBoundingClientRect();t.top<window.innerHeight&&0<t.bottom&&e.forEach(function(t){var e=t.property,n=t.from,o=t.to,t=t.delay;setTimeout(function(){applyCSSAnimation(r,e,n,o,i,c)},void 0===t?0:t)})})})}function attachClickListeners(t,e,i,c){t.forEach(function(r){r.addEventListener("click",function(){e.forEach(function(t){var e=t.property,n=t.from,o=t.to,t=t.delay;setTimeout(function(){applyCSSAnimation(r,e,n,o,i,c)},void 0===t?0:t)})})})}function attachFocusListeners(t,e,i,c){t.forEach(function(r){r.addEventListener("focus",function(){e.forEach(function(t){var e=t.property,n=t.from,o=t.to,t=t.delay;setTimeout(function(){applyCSSAnimation(r,e,n,o,i,c)},void 0===t?0:t)})}),r.addEventListener("blur",function(){e.forEach(function(t){var e=t.property,n=t.from,o=t.to,t=t.delay;setTimeout(function(){revertCSSAnimation(r,e,n,o,i,c)},void 0===t?0:t)})})})}function attachVisibleListeners(t,e,i,c){var n=new IntersectionObserver(function(t){t.forEach(function(r){r.isIntersecting&&e.forEach(function(t){var e=t.property,n=t.from,o=t.to,t=t.delay;setTimeout(function(){applyCSSAnimation(r.target,e,n,o,i,c)},void 0===t?0:t)})})});t.forEach(function(t){n.observe(t)})}function animateElements(t){var e,n=t.element,o=t.properties,r=t.duration,i=t.easing,c=t.trigger,a=document.querySelectorAll(n);if(0===a.length)return logError(e="No elements found for the provided selector."),createErrorResponse(e);switch(c){case"hover":attachHoverListeners(a,o,r,i);break;case"scroll":attachScrollListeners(a,o,r,i);break;case"click":attachClickListeners(a,o,r,i);break;case"focus":attachFocusListeners(a,o,r,i);break;case"visible":attachVisibleListeners(a,o,r,i);break;default:return logError(e='Trigger "'.concat(c,'" not implemented.')),createErrorResponse(e)}}var FlowMotion={animate:animateElements};window.FlowMotion=FlowMotion;